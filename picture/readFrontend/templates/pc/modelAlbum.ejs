<%- include('common/top', {}); %>
<%- include('common/mainHeader', {}); %>
<div class="container">
    <div class="row ">
        <div class="col-md-9 padding-0 row">
            <div class="col-xs-12 book-box">
                <div class="border book-list-box">
                    <h2 class="book-list-header">现在位置：<a href="/">首页</a> &raquo; <a href="/model/<%= model.modelId%>">
                            <%= model.name%></a>
                        &raquo;图片写真
                    </h2>
                    <div class="book-list-remark">
                        <%= model.name+(model.othername?"（"+model.othername+"）":"") %>出道至今的高清写真套图共
                        <%= relatedPicturesCount %> 部，写真持续更新中～，敬请期待～
                    </div>
                    <div class="book-list">
                        <% pictures.forEach(function(picture){ %>
                        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6">
                            <a class="gallery-item" href="/gallery/<%= picture.pictureId%>" target="_blank" title="<%= picture.title%>">
                                <div class="gallery-cover"><img src="<%= (/\/\/img\..+/.test(picture.imgHost)?'https://img.99nvshen.com':/\/\/t1\..+/.test(picture.imgHost)?'https://img1.99nvshen.com':picture.imgHost)+picture.cover%>" alt="<%= picture.title%>"></div>
                                <div class="gallery-title-1">
                                    <%= picture.title%>
                                </div>
                            </a>
                        </div>
                        <% }); %>
                    </div>
                    <nav aria-label="Page navigation" class="pagination-box">
                        <ul class="pagination">
                            <% if(pagination.currentPage>1){%>
                            <li>
                                <a href="/model/<%= model.modelId%>/album/<%= pagination.currentPage-1%>/" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <% } %>
                            <% pagination.pages.forEach(function(page){ %>
                            <li class=<%=page==pagination.currentPage?"active":""%>><a href="/model/<%= model.modelId%>/album/<%= page%>/">
                                    <%= page%></a></li>
                            <% }); %>
                            <% if(pagination.currentPage<pagination.totalPage){%>
                            <li>
                                <a href="/model/<%= model.modelId%>/album/<%= pagination.currentPage+1%>/" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            <% } %>
                            <% if(pagination.pages[pagination.pages.length-1]<pagination.totalPage){%>
                            <li><a href="/model/<%= model.modelId%>/album/<%= pagination.totalPage%>/">...
                                    <%= pagination.totalPage%></a></li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="col-md-3 home-right-box">
            <div class="border book-list-box">
                <h2 class="book-list-header">热门高清套图</h2>
                <div class="book-list">
                    <% recommendPictures.forEach(function(picture){ %>
                    <a class="gallery-item" href="/gallery/<%= picture.pictureId%>" target="_blank" title="<%= picture.title%>">
                        <div class="gallery-cover"><img src="<%= (/\/\/img\..+/.test(picture.imgHost)?'https://img.99nvshen.com':/\/\/t1\..+/.test(picture.imgHost)?'https://img1.99nvshen.com':picture.imgHost)+picture.cover%>" alt="<%= picture.title%>"></div>
                        <div class="gallery-title-1">
                            <%= picture.title%>
                        </div>
                    </a>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('common/footer', {}); %>
<%- include('common/bottom', {}); %>