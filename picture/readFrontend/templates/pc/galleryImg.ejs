<%- include('common/top', {}); %>
<div class="container-fluid padding-0">
    <div class="row ">
        <div class="col-xs-12 book-box">
            <div class="border book-list-box">
                <h2 class="book-list-header">现在位置：<a href="/">首页</a> &raquo; <a href="/galleryList/">美女图片</a>
                    &raquo; <a href="/gallery/<%= picture.pictureId%>">
                        <%= picture.title%></a>
                </h2>
                <div class="book-list">
                    <div style="text-align: center;font-weight: bold;color: red;">点击图片进入下一页~.~</div>
                    <a class="gallery-img" href="/galleryImg/<%= picture.pictureId%>/<%= pagination.currentPage+1%>">
                        <img src="<%= (/\/\/img\..+/.test(picture.imgHost)?'https://img.99nvshen.com':/\/\/t1\..+/.test(picture.imgHost)?'https://img1.99nvshen.com':picture.imgHost)+pic%>">
                    </a>
                </div>
                <nav aria-label="Page navigation" class="pagination-box">
                    <ul class="pagination">
                        <% if(pagination.currentPage>1){%>
                        <li>
                            <a href="/galleryImg/<%= picture.pictureId%>/<%= pagination.currentPage-1%>/" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <% } %>
                        <% pagination.pages.forEach(function(page){ %>
                        <li class=<%=page==pagination.currentPage?"active":""%>><a href="/galleryImg/<%= picture.pictureId%>/<%= page%>/">
                                <%= page%></a></li>
                        <% }); %>
                        <% if(pagination.currentPage<pagination.totalPage){%>
                        <li>
                            <a href="/galleryImg/<%= picture.pictureId%>/<%= pagination.currentPage+1%>/" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-md-12 col-xs-12 book-box">
            <div class="border book-list-box">
                <h2 class="book-list-title">热门图集推荐</h2>
                <div class="book-list">
                    <% recommendPictures.forEach(function(picture){ %>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6">
                        <a class="gallery-item" href="/gallery/<%= picture.pictureId%>" target="_blank" title="<%= picture.title%>">
                            <div class="gallery-cover"><img src="<%= (/\/\/img\..+/.test(picture.imgHost)?'https://img.99nvshen.com':/\/\/t1\..+/.test(picture.imgHost)?'https://img1.99nvshen.com':picture.imgHost)+picture.cover%>" alt="<%= picture.title%>"></div>
                            <div class="gallery-title-1">
                                <%= picture.title%>
                            </div>
                        </a>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
</script>
<%- include('common/footer', {}); %>
<%- include('common/bottom', {}); %>