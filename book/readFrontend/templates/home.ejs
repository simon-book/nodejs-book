<%- include('common/top', {}); %>
<link rel="stylesheet" type="text/css" href="/static/src/css/common.css" />
<link rel="stylesheet" type="text/css" href="/static/src/css/index.css" />
<%- include('common/mainHeader', {}); %>
<nav class="smallNav">
    <a href="/home" class="sel">龙虎榜</a>
    <a href="/category">分类</a>
    <a href="/quanben"">全本</a>
    <a href="/history">轨迹 </a> <!-- <a href="/user/" style="width:14%">书架</a> -->
</nav>
<%- include('common/searchForm', {}); %>
<div class="tabArea">
    <div class="tab-nav">
        <a class="tab-nav-cur">
            <%= firstBlock.name%></a>
    </div>
    <div class="slide">
        <div class="slide-con4">
            <div class="slide-item">
                <% firstBlock.books.forEach(function(book){ %>
                <a class="hot_sale" href="/book/<%= book.bookId%>/">
                    <div class="bookimg">
                        <img src="<%= book.cover%>">
                    </div>
                    <div class="bookinfo">
                        <p class="title">
                            <%= book.title%>
                        </p>
                        <p class="author">作者：
                            <%= book.writer%>
                        </p>
                        <p class="review">简介：
                            <%= book.abstractContent%>
                        </p>
                    </div>
                </a>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<% otherBlocks.forEach(function(block){ %>
<div class="tabArea bannerLink">
    <div class="tab-nav">
        <h2><a class="tab-nav-cur">
                <%= block.name%></a></h2>
    </div>
    <div class="slide">
        <div class="slide-con4">
            <div class="slide-item">
                <% block.books.forEach(function(book){ %>
                <a href="/book/<%= book.bookId%>/">
                    <p>
                        <span class="sort">[
                            <%= book.categoryName%>]</span>
                        <span class="title">
                            <%= book.title%> /<small>
                                <%= book.writer%></small></span>
                    </p>
                </a>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<% }); %>
<%- include('common/footer', {}); %>
<%- include('common/bottom', {}); %>